<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/plotterCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        card_view:cardCornerRadius="10dp">

        <com.androidplot.xy.XYPlot
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="5dip"
            android:layout_row="2"
            ap:graphBackgroundColor="#FFFFFF"
            ap:gridBackgroundColor="#FFFFFF"
            ap:backgroundColor="#FFFFFF"
            ap:borderColor="#FFFFFF"
            ap:domainTickLabelTextSize="5dip"
            ap:domainTickLabelTextColor="#000000"
            ap:rangeTickLabelTextSize="5dip"
            ap:rangeTickLabelTextColor="#000000"
            ap:domainStepMode="increment_by_val"
            ap:labelTextSize="12dip"
            ap:labelTextColor="#000000"
            ap:domainLabelTextSize="20dip"
            ap:domainLabelTextColor="#000000"
            ap:rangeLabelTextSize="10dip"
            ap:rangeLabelTextColor="#000000"
            ap:legendTextSize="7dip"
            ap:legendTextColor="#000000"
            ap:legendWidthSizeLayoutType="fill"
            ap:legendPositionX="0dip"
            ap:legendAnchorPosition="right_bottom"

            ap:gridPaddingTop="7dip"
            ap:gridPaddingLeft="7dip"
            ap:gridPaddingBottom="7dip"

            />

    </android.support.v7.widget.CardView>
</LinearLayout>
